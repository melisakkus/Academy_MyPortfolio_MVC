@model List<Academy_MyPortfolio_MVC.Models.TblSocialMedia>

<section id="contact" class="s-contact target-section">

    <div class="row contact-top">
        <div class="column lg-12">
            <h2 class="text-pretitle">
                İletişime Geç
            </h2>

            <p class="h1">
                Bir sorunuz varsa ya da tasarım, teknoloji ve yazılım üzerine fikir paylaşmak isterseniz — bana bir mesaj gönderin.
            </p>
        </div>
    </div> <!-- end contact-top -->



    <div class="row contact-bottom">

                @Html.Action("SendMessageContact","Default")


        <div class="column lg-4 md-5 tab-6 stack-on-550 contact-block">
            <h3 class="text-pretitle">Sosyal Medya</h3>
            <ul class="contact-social">
                @foreach (var item in Model)
                {
                    <li><a href="@item.Url">@item.Name</a></li>
                }
                </ul>
        </div>

        <div class="column lg-4 md-12 contact-block">
            <a href="#contact2" class="btn btn-primary">
                Bana Ulaşın
            </a>

        </div>
    </div>
</section>


<section id="contact2" class="s-contact target-section">

    <div class="row contact-top">
        <div class="column lg-12 md-6 tab-6 stack-on-550 contact-block">
            <h2 class="text-pretitle">
                Mesaj Gönderin
            </h2>
            <form class="column lg-12" method="post" action="/Default/SendMessage/">
                <label>Ad Soyad</label>
                <input type="text" name="Name" class="form-control" style="width: 300px;"   required />
                <br />
                <label>Email</label>
                <input type="email" name="Email" class="form-control" style="width: 300px;"  required />
                <br />
                <label>Konu</label>
                <input type="text" name="Subject" class="form-control" style="width: 500px;"  required />
                <br />
                <label>Mesajınız</label>
                <textarea type="text" name="MessageContent" class="form-control" rows="4" cols="200" required></textarea>
                <br />
                <button class="btn btn-outline-dark">Mesajı Gönder</button>


            </form>
        </div>
    </div> <!-- end contact-top -->
</section>