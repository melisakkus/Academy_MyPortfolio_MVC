@model List<Academy_MyPortfolio_MVC.Models.TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}
<br />
<h2 style="padding-left:20px">İletişim Bilgileri</h2>
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Telefon Numarası : </th>
            <th>Email : </th>
            <th>Sil</th>
            <th>Güncelle</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Phone</td>
                <td>@item.Email</td>
                <td><a href="/AdminContact/DeleteContact/@item.ContactId" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/AdminContact/UpdateContact/@item.ContactId" class="btn btn-outline-warning">Güncelle</a></td>
            </tr>
        }

    </tbody>
</table>

<div class="text-center">
    <a href="/AdminContact/AddContact" class="btn btn-outline-success">Yeni Ekle</a>
</div>
<br />
