@model Academy_MyPortfolio_MVC.Models.TblCategory
@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
}

<br />
<h2 style="padding-left:20px">Kategori Güncelleme Sayfası</h2>
<br />

<form method="post">
    @Html.HiddenFor(x => x.CategoryId)
    <label>Kategori Ad</label>
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    <div class="text-center">
        <button class="btn btn-warning">Güncelle</button>
    </div>
    <br />
</form>