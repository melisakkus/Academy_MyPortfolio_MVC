@model List<Academy_MyPortfolio_MVC.Models.TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<h2>Eğitim Hayatım</h2>

<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Okul Adı</th>
        <th>Bölüm</th>
        <th>Başlangıç</th>
        <th>Bitiş</th>
        <th>Derece</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach(var item in Model)
    {
        count ++;
                <tr>
                    <th>@count</th>
                    <td>@item.SchoolName</td>
                    <td>@item.DepartmentName</td>
                    <td>@item.StartDate.ToShortDateString()</td>
                    <td>@(String.IsNullOrEmpty(item.EndDate?.ToString()) ? "Devam Ediyor" : item.EndDate?.ToShortDateString())</td>
                    @*<td>@item.EndDate</td>*@
                    <td>@item.Degree</td>
                    <td><a href="/Education/DeleteEducation/@item.EducationId" class="btn btn-danger"> Sil</a></td>
                    <td><a href="/Education/UpdateEducation/@item.EducationId" class="btn btn-info"> Güncelle</a></td>
                </tr>
            }
</table>
<a href="/Education/CreateEducation" class="btn btn-outline-success">Yeni Eğitim Ekle</a>


